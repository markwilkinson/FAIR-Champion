<!-- views/index.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>FAIR Test Visualization</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">FAIR Test Execution Visualization</h1>


    <!-- BLUF: Pass/Fail Result -->
    <div class="alert <%= @testresult.value == 'pass' ? 'alert-success' : 'alert-danger' %> mb-4" role="alert">
      <h4 class="alert-heading">Test Result: <%= @testresult.value.capitalize %></h4>
    </div>

    <!-- Test Execution Section -->

    <section class="mb-4">
      <h2>Test Execution</h2>
      <ul class="list-group">
        <li class="list-group-item"><strong>Associated Test:</strong> <a href="<%= @testresult.test_identifier %>"><%= @testresult.title %></a></li>
        <% begin %>
          <li class="list-group-item"><strong>Data Used:</strong> <a href="<%= @testresult.target_resource %>"><%= @testresult.target_resource %></a></li>
        <% rescue %>
          <li class="list-group-item"><strong>Data Used:</strong> INVALID URI</li>
        <% end %>
        <% if @testresult.benchmark_or_metric %>
          <li class="list-group-item"><strong>Implementation of Metric:</strong> <a href="<%= @testresult.benchmark_or_metric %>"><%= @testresult.benchmark_or_metric %></a></li>
        <% end %>
      </ul>
    </section>

    <!-- Test Details Section -->
    <section class="mb-4">
      <h2>Test Details</h2>
      <ul class="list-group">
        <li class="list-group-item"><strong>Test  ID:</strong> <%= @testresult.test_identifier %></li>
        <li class="list-group-item"><strong>Title:</strong> <%= @testresult.title %></li>
        <li class="list-group-item"><strong>Description:</strong> <%= @testresult.description %></li>
      </ul>
    </section>

    <!-- Test Result Section -->
    <section class="mb-4">
      <h2>Test Result</h2>
      <ul class="list-group">
        <li class="list-group-item"><strong>Result:</strong> <span class="badge <%= @testresult.value == 'pass' ? 'bg-success' : 'bg-danger' %>"><%= @testresult.value %></span></li>
        <li class="list-group-item"><strong>Generated At:</strong> <%= @testresult.time %></li>
        <li class="list-group-item"><strong>Completion:</strong> <%= @testresult.completion %>%</li>
      </ul>

      <!-- Collapsible Log Section -->
      <div class="mt-3">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#logCollapse" aria-expanded="false" aria-controls="logCollapse">
          Toggle Log
        </button>
        <div class="collapse mt-2" id="logCollapse">
          <div class="card card-body">
            <div style="font-family: 'Courier New', monospace; font-size: 50%">
              <% @testresult.log.split("\n").each do |line| %>
                <% if line.start_with?('WARN') %>
                  <span style="color: #ffcc00;"><%= line %></span><br/>
                <% elsif line.start_with?('CRITICAL') %>
                  <span style="color: #ff7700;"><%= line %></span><br/>
                <% elsif line.start_with?('FAILURE') %>
                  <span style="color: #ff0000;"><%= line %></span><br/>
                <% elsif line.start_with?('SUCCESS') %>
                  <span style="color: #00cc00;"><%= line %></span><br/>
                <% else %>
                  <%= line %><br/>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Raw JSON Section -->
    <section class="mb-4">
      <h2>Raw JSON</h2>
      <div class="mt-3">
        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#jsonCollapse" aria-expanded="false" aria-controls="jsonCollapse">
          Toggle Raw JSON
        </button>
        <div class="collapse mt-2" id="jsonCollapse">
          <div class="card card-body">
            <pre><%= JSON.pretty_generate(JSON.parse(@testresult.rawjson)) %></pre>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/scripts.js"></script>
</body>
</html>